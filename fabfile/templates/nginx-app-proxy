upstream app_server {
    # Bindings to the Gunicorn server
    server 127.0.0.1:8000 fail_timeout=0;
}

server {
    access_log %(PROJECT_PATH)s/logs/nginx-access.log;
    error_log %(PROJECT_PATH)s/logs/nginx-error.log;

    listen 80;
    server_name %(DOMAINS)s %(EC2_INSTANCES)s;

    client_max_body_size 4G;
    client_header_timeout 60;
    client_body_buffer_size 1K;
    client_header_buffer_size 1k;
    root %(PROJECT_PATH)s;

    location /static/ {
        root %(PROJECT_PATH)s/static/;
        expires 3h;
    }

    location / {
        proxy_redirect off;
        proxy_set_header  X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Host $http_host;
        proxy_set_header  X-Real-IP  $remote_addr;
        proxy_set_header Host $http_host;

        proxy_buffers 8 24k;
        proxy_buffer_size 2k;

        # forces https request
        # if ($http_x_forwarded_proto != 'https') {
            # rewrite ^ https://$host$request_uri? permanent;
        # } 

        if (!-f $request_filename) {
            proxy_pass http://app_server;
            break;
        }
    }

    error_page 500 502 503 504 /500.html;
    location = /500.html {
        root %(PROJECT_PATH)s/templates/;
    }
}
